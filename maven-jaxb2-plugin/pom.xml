<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<artifactId>krasa-jaxb-tools-example</artifactId>
		<groupId>com.github.krasa</groupId>
		<version>0.5-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<artifactId>maven-jaxb2-plugin</artifactId>

	<dependencies>
		<dependency>
			<groupId>com.github.krasa</groupId>
			<artifactId>common</artifactId>
			<version>${krasa-jaxb-tools-example.version}</version>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>${project.basedir}/src/generated</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>${build-helper-maven-plugin.version}</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>src/generated</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>${maven-jaxb2-plugin.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<generateDirectory>${project.basedir}/src/generated</generateDirectory>
							<forceRegenerate>true</forceRegenerate>
							<schemas>
								<schema>
									<fileset>
										<directory>${project.parent.basedir}/wsdl</directory>
										<includes>
											<include>*.*</include>
										</includes>
										<excludes>
											<exclude>*.xs</exclude>
										</excludes>
									</fileset>
								</schema>
							</schemas>
							<extension>true</extension>
							<args>
								<arg>-no-header</arg>
								<arg>-XReplacePrimitives</arg>
								<arg>-XJsr303Annotations</arg>
								<arg>-XJsr303Annotations:targetNamespace=a</arg>
								<arg>-XhashCode</arg>
								<arg>-Xequals</arg>
							</args>
							<plugins>
								<plugin>
									<groupId>com.github.krasa</groupId>
									<artifactId>krasa-jaxb-tools</artifactId>
									<version>${krasa-jaxb-tools.version}</version>
								</plugin>
								<plugin>
									<groupId>org.jvnet.jaxb2_commons</groupId>
									<artifactId>jaxb2-basics</artifactId>
									<version>${jaxb2-basics.version}</version>
								</plugin>
							</plugins>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>